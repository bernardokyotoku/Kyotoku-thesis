\begin_layout Standard
\begin_inset Formula \[
\frac{\partial}{\partial n}\left(\left(P-Q\right)\cdot m\right)=n\cdot\nabla\left(\left(P-Q\right)\cdot m\right)=n_{x}\frac{\partial}{\partial x}\left(\left(P_{x}-Q_{x}\right)m_{x}+\left(P_{y}-Q_{y}\right)m_{y}\right)+n_{y}\frac{\partial}{\partial y}\left(\left(P-Q\right)\cdot m\right)=n\cdot m\]

\end_inset


\begin_inset Formula \[
\frac{\partial}{\partial n}\left(\frac{1}{s}\right)\]

\end_inset


\begin_inset Formula \[
\]

\end_inset


\begin_inset Formula $s=\sqrt{\left(p_{x}-q_{x}\right)^{2}+\left(p_{y}-q_{y}\right)^{2}}$
\end_inset


\begin_inset Formula \[
\vec{\nabla}\left(\frac{1}{s}\right)\cdot\vec{n}=-\frac{1}{s^{2}}\vec{\nabla}s\cdot\vec{n}=-\frac{1}{s^{2}}\vec{\nabla}\sqrt{\left(p_{x}-q_{x}\right)^{2}+\left(p_{y}-q_{y}\right)^{2}}\cdot\vec{n}\]

\end_inset


