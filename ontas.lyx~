\begin_inset Formula \[
\vec{\nabla}\sqrt{\left(p_{x}-q_{x}\right)^{2}+\left(p_{y}-q_{y}\right)^{2}}=\frac{p_{x}i+p_{x}j}{s}=\cos\left(s,n\right)\]

\end_inset


\begin_inset Formula \[
\vec{\nabla}\left(\frac{1}{s}\right)\cdot\vec{n}=\frac{1}{s^{2}}\cos\left(s,n\right)\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
U\left(P'\right)=\frac{1}{4\pi}\int\left\{ U\frac{\partial}{\partial n}\left(\frac{e^{\text{i}ks}}{s}\right)-\left(\frac{e^{\text{i}ks}}{s}\right)\frac{\partial U}{\partial n}\right\} dS\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $s=\left|Q-P'\right|=\sqrt{\left(Q_{x}-P'_{x}\right)^{2}+\left(Q_{y}+P'_{y}\right)^{2}}$
\end_inset


\begin_inset Formula \[
\frac{\partial}{\partial n'}U\left(P\right)=\frac{1}{4\pi}\int\left\{ U\frac{\partial}{\partial n'}\frac{\partial}{\partial n}\left(\frac{e^{\text{i}ks}}{s}\right)-\frac{\partial U}{\partial n}\frac{\partial}{\partial n'}\left(\frac{e^{\text{i}ks}}{s}\right)\right\} dS\]

\end_inset


\begin_inset Formula \[
\frac{\partial}{\partial n}\left(\frac{e^{\text{i}ks}}{s}\right)=\frac{e^{\text{i}ks}}{s}\left[\text{i}k-\frac{1}{s}\right]\cos\left(n,s\right)\]

\end_inset


\begin_inset Formula \[
\]

\end_inset


\begin_inset Formula \[
\frac{\partial}{\partial n'}U\left(P\right)=\frac{1}{4\pi}\int\left\{ U\frac{\partial}{\partial n'}\left\{ \frac{e^{\text{i}ks}}{s}\left[\text{i}k-\frac{1}{s}\right]\cos\left(n,s\right)\right\} -\frac{\partial U}{\partial n}\frac{e^{\text{i}ks}}{s}\left[\text{i}k-\frac{1}{s}\right]\cos\left(n',s\right)\right\} dS\]

