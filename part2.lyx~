\begin_layout Standard
\begin_inset Formula \[
\begin{cases}
P_{x}=I_{x}-y\sin\iota\\
P_{y}=I_{y}+y\cos\iota\end{cases}\]

\end_inset


\begin_inset Formula \[
\begin{cases}
P'_{x}=I_{x}+r\cos\left(\iota+\alpha\right)\\
P'{}_{y}=I_{y}+r\sin\left(\iota+\alpha\right)\end{cases}\]

\end_inset


\begin_inset Formula \[
\begin{cases}
P'_{x}=P_{x}+r'\cos\left(\iota+\alpha'\right)\\
P'{}_{y}=P_{y}+r'\sin\left(\iota+\alpha'\right)\end{cases}\]

\end_inset


\begin_inset Formula \[
\begin{cases}
P'_{x}=I_{x}-y\sin\iota+r'\cos\alpha'\\
P'{}_{y}=I_{y}+y\cos\iota+r'\sin\alpha'\end{cases}\]

\end_inset


\begin_inset Formula \[
r_{1}=\left|P'-I\right|\]

\end_inset


\begin_inset Formula \[
r'_{1}=\left|P'-P\right|\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
r'^{2}=\left(P'_{y}-P_{y}\right)^{2}+P'_{x}\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
r'=\sqrt{\left(r\sin\alpha-P_{y}\right)^{2}+r\cos^{2}\alpha}\]

\end_inset


\begin_inset Formula \[
r'=\sqrt{r^{2}-2P_{y}r\sin\alpha+P_{y}^{2}}\]

\end_inset


\begin_inset Formula \[
r'=r\sqrt{1-2\frac{P_{y}}{r}\sin\alpha+\left(\frac{P_{y}}{r}\right)^{2}}\]

\end_inset


\begin_inset Formula \[
r'=r\left[1-\frac{P_{y}}{r}\sin\alpha+O\left(2\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
for
\begin_inset Formula \[
\cos\alpha'=\sqrt{1-\sin^{2}\alpha'}=\sqrt{1-\left(\frac{P'_{y}-P_{y}}{r'}\right)^{2}}=\sqrt{1-\left[\frac{r\left(\sin\alpha-\frac{P_{y}}{r}\right)}{r\left(1-\frac{P_{y}}{r}\sin\alpha\right)}\right]^{2}}\approx\cos\alpha+\frac{P_{y}}{r}\sin\alpha\cos\alpha\]

\end_inset


\begin_inset Formula \[
\frac{1}{\sqrt{r'}}=\frac{1}{\sqrt{r}}\frac{1}{1-\frac{P_{y}}{r}\sin\alpha+O\left(2\right)}\approx\frac{1}{\sqrt{r}}\left(1+\frac{P_{y}}{2r}\sin\alpha\right)\]

\end_inset


\end_layout

\begin_layout Standard
Putting all together:
\begin_inset Formula \[
E_{inc}=\frac{1}{2}\sqrt{\frac{n_{eff}}{\lambda}}\int E_{wg}\left(y\right)\frac{e^{-ikr'}}{\sqrt{r'}}\left(1+\cos\alpha'\right)dP_{y}\]

\end_inset


\end_layout

\begin_layout Standard
dsd 
\begin_inset Formula $E_{wg}\left(y\right)=E\exp\left[-4\ln2\left(\frac{P_{y}}{w}\right)^{2}\right]$
\end_inset


\begin_inset Formula \[
E_{inc}=\frac{1}{2}\sqrt{\frac{n_{eff}}{\lambda}}\int E_{wg}\left(y\right)\frac{e^{-ikr+ikP_{y}\sin\alpha}}{\sqrt{r}}\left(1+\frac{P_{y}}{2r}\sin\alpha\right)\left(1+\cos\alpha+\frac{P_{y}}{r}\sin\alpha\cos\alpha\right)dP_{y}\]

\end_inset


\begin_inset Formula \[
E_{inc}=\frac{1}{2}\sqrt{\frac{n_{eff}}{\lambda}}\int E\exp\left[-4\ln2\left(\frac{P_{y}}{w}\right)^{2}\right]\frac{e^{-ikr+ikP_{y}\sin\alpha}}{\sqrt{r}}\left(1+\frac{P_{y}}{2r}\sin\alpha\right)\left(1+\cos\alpha+\frac{P_{y}}{r}\sin\alpha\cos\alpha\right)dP_{y}\]

\end_inset


\begin_inset Formula \[
E_{inc}=\frac{1}{2}\sqrt{\frac{n_{eff}}{\lambda}}\frac{E}{\sqrt{r}}\int\exp\left[-4\ln2\left(\frac{P_{y}}{w}\right)^{2}\right]e^{-ikr}e^{-ikP_{y}\sin\alpha}\left(1+\cos\alpha+\frac{P_{y}}{r}\left(\frac{1}{2}+\frac{3}{2}\sin\alpha\cos\alpha\right)+\frac{1}{2}\left(\frac{P_{y}}{r}\right)^{2}\sin^{2}\alpha\cos\alpha\right)dP_{y}\]

\end_inset


\begin_inset Formula \[
E_{inc}=\frac{1}{2}\sqrt{\frac{n_{eff}}{\lambda}}\frac{E}{\sqrt{r}}e^{-ikr}\left\{ \left(1+\cos\alpha\right)\int\exp\left[-4\ln2\left(\frac{P_{y}}{w}\right)^{2}\right]e^{-ikP_{y}\sin\alpha}dP_{y}+\frac{1}{r}\left(\frac{1}{2}+\frac{3}{2}\sin\alpha\cos\alpha\right)\int\exp\left[-4\ln2\left(\frac{P_{y}}{w}\right)^{2}\right]e^{-ikP_{y}\sin\alpha}P_{y}dP_{y}\right\} \]

\end_inset


\end_layout

